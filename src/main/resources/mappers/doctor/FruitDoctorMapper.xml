    <sql id="Base_Where_Condition" >
        <where>
            <if test="id != null ">
                and id = #{id}
            </if>
            <if test="realName != null and realName != '' ">
                and real_name like concat('%',#{realName},'%')
            </if>
            <if test="photo != null ">
                and photo = #{photo}
            </if>
            <if test="inviteCode != null and inviteCode != '' ">
