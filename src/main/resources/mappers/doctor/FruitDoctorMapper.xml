    <!--加减鲜果师红利和可结算余额-->
    <update id="updateBouns" parameterType="map">
        update fruit_doctor
        <set>
            <if test="balanceType == 'BOUNS'  and money != null">
                bonus = bonus + #{money},
            </if>
            <if test="balanceType == 'SETTLEMENT' and money != null">
                settlement = settlement + #{money},
            </if>
        </set>
        where id=#{id}
    </update>

