            </if>
            <if test="userId != null ">
                and user_id = #{userId}
            </if>
            <if test="doctorLevel != null ">
                and doctor_level = #{doctorLevel}
            </if>
            <if test=" doctorLevels!= null ">
                and doctor_level in
                <foreach collection="doctorLevels" item="item" open="("
